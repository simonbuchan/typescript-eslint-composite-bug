{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src"],
  "exclude": ["*.test.ts"],
  "references": [
    { "path": "./tsconfig.test.json" },
  ],
}
